<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cybersectnt.cybersectntdemo1">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.cybersectnt.activities.ScenariosListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.ScenarioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.TasksListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cybersectnt.activities.SocialEngineeringActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.ScoreboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.SingleEmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.MailBoxActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.AuthenticationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cybersectnt.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />
    </application>

</manifest>