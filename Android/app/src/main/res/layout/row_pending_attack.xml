<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_atk"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            tools:text="Username"
            android:id="@+id/TextViewToCurrentPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textSize="22sp" />
        <ImageView
            android:id="@+id/ImageViewToShowCompleted"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:scaleType="fitEnd"
            android:visibility="gone"
            android:src="@drawable/done_icon" />

    </LinearLayout>

    <ProgressBar
        tools:progress="50"
        android:id="@+id/ProgressBarToVisualizeTimeLeft"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:progress="0" />

    <TextView
        tools:text="5 minutes 22 seconds left"
        android:id="@+id/TextViewToShowRemainingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text=""
        android:textSize="22sp" />
</LinearLayout>